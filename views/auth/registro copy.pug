extends ../layout/index

block contenido
  .py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raíces
    h2.text-center.text-2xl=pagina

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST" action="/auth/registro")
          div 
            label.block.text-sm.uppercase.text-gray-500.font-bold(for="nombre") Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre")
          div 
            label.block.text-sm.uppercase.text-gray-500.font-bold(for="email") Email de Registro
            input#email.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
          div 
            label.block.text-sm.uppercase.text-gray-500.font-bold(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
          div 
            label.block.text-sm.uppercase.text-gray-500.font-bold(for="repetir_password") Repetir password
            input#repetir_password.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-400(placeholder="Repetir Password" type="password" name="repetir_password")
          div.flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") Inicia Sesión
            a.text-gray-500.text-xs(href="/auth/recuperar-contrasena") Olvidé mi Password
          input.w-full.bg-indigo-600.text-white.font-bold.py-3.cursor-pointer(class="hover:bg-indigo-700" type="submit" value="Crear Cuenta")
          input(class="w-full bg-indigo-600 hover:bg-indigo-700" type="submit" value="Crear Cuenta")