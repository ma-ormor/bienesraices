extends ../layout/index

block contenido
  .py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raíces
    h2.text-center.text-2xl=pagina

    if errores
      .max-w-md.mx-auto.my-10
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST" novalidate)
          input(type="hidden" name="_csrf" value=csrfToken)
          div 
            label.block.text-sm.uppercase.text-gray-500.font-bold(
              for="password") Nueva contraseña
            input#password.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-400(
              placeholder="Tu Password" type="password" name="password")
          input.w-full.bg-indigo-600.text-white.font-bold.py-3.cursor-pointer(class="hover:bg-indigo-700" type="submit" value="Aceptar")